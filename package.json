{
  "name": "dom-inspector",
  "version": "1.0.1",
  "description": "A DOM inspector library",
  "type": "module",
  "main": "./dist/dom-inspector.cjs",
  "module": "./dist/dom-inspector.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/dom-inspector.js",
      "require": "./dist/dom-inspector.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc --emitDeclarationOnly && vite build",
    "build:dev": "tsc --emitDeclarationOnly && vite build --mode development",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "release": "npm run build && npm run changelog",
    "prepare": "npm run build"
  },
  "keywords": [
    "dom",
    "inspector",
    "typescript",
    "library"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "@vitest/coverage-v8": "^2.1.8",
    "conventional-changelog-cli": "^5.0.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "fs-extra": "^11.3.3",
    "jsdom": "^27.3.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "vite": "^6.0.6",
    "vite-plugin-dts": "^4.3.0",
    "vitest": "^2.1.8"
  },
  "dependencies": {
    "@types/jsdom": "^27.0.0",
    "typescript-eslint": "^8.51.0"
  }
}
